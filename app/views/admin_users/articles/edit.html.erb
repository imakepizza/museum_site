<div class="row">
  <div class="col-md-3">
    <%= link_to 'Back', articles_path, class: 'btn btn-secondary mb-3' %>
    <div class="card">


    <div class="card-body">

      <h4 class='card-title'>Редактировать статью</h4>
      <%= render 'form', article: @article %>
    </div>
  </div>
</div>
