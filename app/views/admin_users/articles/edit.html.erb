      <%= form.submit "Paragraph", class: "btn btn-secondary"%>
    <% end %>
  </div>
<div class="card">
  <div class="card-body pt-5">
    <% @article.elements.each do |element| %>
    <% if element.persisted? %>
    <div class="mb-3 p-3">
<div class="paragraph-content">
  <% if element.content.present? %>
  <%= element.content %>
  <% else %>
  Добавить содержание
  <% end %>
<%= element.content %>
</div>
<div class="paragraph-form d-none">

  <%= form_with(model: [@article, element]) do |form| %>
  <%= form.rich_text_area :content %>
  <div class="mt-3">
    <%= form.submit "Save", class: 'btn btn-secondary' %>
    <a href="#" class='cancel btn btn-secondary'>Cancel</a>
  </div>
  <% end %>
</div>
  </div>

